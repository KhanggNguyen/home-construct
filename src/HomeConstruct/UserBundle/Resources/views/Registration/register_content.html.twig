{% trans_default_domain 'FOSUserBundle' %}

<!-- Login - Heading -->
<div class="g-max-width-645 text-center g-pt-15 mx-auto g-mb-15">
    <h1 class="mb-0">Créer un compte</h1>
</div>
<!-- Login -->
<div class="container g-pb-30">
    <div class="row justify-content-center">
        <div class="col-md-12 col-lg-8 text-center g-mb-70">
            <h2 class="h5 mb-4"></h2>
            <!-- Login Form -->

            {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'g-mb-30'}}) }}

            {#<div class="g-mb-20">#}
                {#{{ form_widget(form.name, {'attr': {'placeholder': form.name.vars.label,'class': 'form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v3 g-brd-primary--hover rounded-0 g-py-13 g-px-15'}}) }}#}
            {#</div>#}

            {#<div class="g-mb-20">#}
                {#{{ form_widget(form.firstname, {'attr': {'placeholder': form.firstname.vars.label,'class': 'form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v3 g-brd-primary--hover rounded-0 g-py-13 g-px-15'}}) }}#}
            {#</div>#}

            <div class="g-mb-20">
                {{ form_widget(form.email, {'attr': {'placeholder': form.email.vars.label,'class': 'form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v3 g-brd-primary--hover rounded-0 g-py-13 g-px-15'}}) }}
            </div>

            <div class="g-mb-20">
                {{ form_widget(form.plainPassword.first, {'attr': {'placeholder': form.plainPassword.first.vars.label,'class': 'form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v3 g-brd-primary--hover rounded-0 g-py-13 g-px-15'}}) }}
                {{ form_errors(form.plainPassword.first) }}
            </div>

            <div class="g-mb-20">
                {{ form_widget(form.plainPassword.second, {'attr': {'placeholder': form.plainPassword.second.vars.label,'class': 'form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v3 g-brd-primary--hover rounded-0 g-py-13 g-px-15'}}) }}
            </div>


            {{ form_widget(form) }}

            <input class="btn btn-block u-btn-primary g-color-white g-bg-primary-dark-v1--hover g-font-weight-600 g-font-size-12 text-uppercase rounded-0 g-px-25 g-py-15"
                   type="submit" value="{{ 'registration.submit'|trans }}"/>
            {{ form_end(form) }}

            <a class="d-block g-mb-10" href="{{ path('fos_user_security_login') }}">Vous avez déjà un compte ? Se
                connecter</a>
            <p class="g-font-size-12">S'il vous plaît vérifié <a class="g-color-text g-text-underline"
                                                                 href="{{ path('symracinefo_conditions_generales_vente') }}">la déclaration
                    de collecte d'informations</a></p><!-- End Login Form -->
        </div>
    </div>
</div>
<!-- Login -->